[Unit]
Description=InterbotixControlServer FastAPI Application
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/emackinnon1/InterbotixControlServer
Environment=PATH=/home/emackinnon1/InterbotixControlServer/.venv/bin:/snap/astral-uv/929/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONPATH=/home/emackinnon1/InterbotixControlServer
